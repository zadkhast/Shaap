<?xml version="1.0" encoding="utf-8"?>
<!-- created by sorush -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="180dp"
        android:layout_height="240dp"
        android:id="@+id/cardView"
        app:cardCornerRadius="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_centerInParent="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/linear_first_card">

                    <com.android.shaap.Tools.Sorush.PersianTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_percent_cat"
                        android:textSize="20sp"
                        android:text="30%"
                        android:gravity="center"
                        android:textColor="@color/black"/>

                        <com.android.shaap.Tools.Sorush.PersianTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_cat"
                        android:textSize="20sp"
                        android:text="غذا"
                        android:gravity="center"
                        android:textColor="@color/black"/>

                    </LinearLayout>

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:id="@+id/image_cat"
                            android:src="@drawable/ic_food_black_36dp"
                            android:layout_toRightOf="@+id/linear_first_card"
                            android:layout_centerInParent="true"/>

                        </LinearLayout>

                <com.hookedonplay.decoviewlib.DecoView
                        xmlns:custom="http://schemas.android.com/apk/res-auto"
                        custom:dv_lineWidth="5dp"
                        android:id="@+id/dynamicArcView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="top"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true">

                    </com.hookedonplay.decoviewlib.DecoView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp">

                    <com.android.shaap.Tools.Sorush.PersianTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%12"
                        android:textSize="18sp"
                        android:id="@+id/text_friend_percent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">


                        <com.android.shaap.Tools.Sorush.PersianTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="دوستان"
                            android:textSize="18sp"
                            android:id="@+id/friend_text_card"
                            android:layout_marginRight="3dp"/>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/icon_circle_friends"
                        android:layout_marginRight="5dp"/>



                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp">

                    <com.android.shaap.Tools.Sorush.PersianTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%12"
                        android:textSize="18sp"
                        android:id="@+id/text_all_percent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">


                        <com.android.shaap.Tools.Sorush.PersianTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="همه"
                            android:textSize="18sp"
                            android:id="@+id/all_text_card"
                            android:layout_marginRight="3dp"/>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/icon_circle_all"
                        android:layout_marginRight="5dp"/>



                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>
