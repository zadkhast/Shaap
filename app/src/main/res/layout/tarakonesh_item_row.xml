<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:elevation="5dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:id="@+id/rel1"
                android:padding="5dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/isSuccess"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_shape2"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/isSuccess"
                    android:orientation="vertical"
                    android:id="@+id/lin2"
                    android:layout_marginRight="5dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:layout_height="30dp"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:id="@+id/catImageView"
                        android:layout_margin="2dp"
                        android:background="@drawable/circle_shape3"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:id="@+id/howPayImageView"
                        android:background="@drawable/circle_shape3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_toLeftOf="@+id/lin2"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="6dp"
                        android:layout_gravity="center"
                        android:src="@drawable/bank_logo"
                        android:id="@+id/bankLogo"
                        android:scaleType="centerInside"
                        android:background="@drawable/circle_shape3"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/rel1"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/nameOfShopperTX"
                        android:padding="2dp"
                        android:gravity="right"
                        android:text="فروشگاه زنجیره ای رفاه"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/costTX"
                        android:padding="2dp"
                        android:text="27000"
                        android:gravity="right"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/dateTX"
                        android:padding="2dp"
                        android:text="95/11/22"
                        android:gravity="right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:id="@+id/sendCommentLIN">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                        android:alpha="0.6"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/leftComment"
                        android:id="@+id/sendCommentTX"
                        android:textSize="11sp"/>




                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>